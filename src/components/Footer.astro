---
import LogoWhite from "./icons/LogoWhite.astro";
---

<!-- Footer -->
<footer>
    <div class="footer-content">
        <!-- LogoWhite y LogoBlack -->
        <div class="logo-container">
            <LogoWhite class="footer-logo logo-white mt-4" />
            <p class="text-2xl text-bold mt-2">Code2Learn</p>
        </div>

        <!-- Enlaces -->
        <div class="footer-links">
            <a href="/#about">About</a>
            <a href="/services">Hire talent</a>
            <a href="/newsletter">Newsletter</a>
            <a href="/#contact">Contact</a> 
        </div>

        <!-- Iconos sociales -->
        <div class="footer-v2__social-links">
            <a href="https://github.com/redom69" class="footer-v2__social-link" aria-label="GitHub">
                <i class="fab fa-github"></i>
            </a>
            <a href="https://www.linkedin.com/in/daniel-hernandez-puerto-57a093194/" class="footer-v2__social-link" aria-label="LinkedIn">
                <i class="fab fa-linkedin"></i>
            </a>
        </div>
    </div>

    <!-- Copyright Text -->
    <div class="footer-bottom">
        <p>© <span id="year"></span> Daniel Hernandez Puerto | All rights reserved.</p>
    </div>
</footer>

<script>
const yearElement = document.getElementById("year");

if (yearElement) {
    yearElement.textContent = new Date().getFullYear().toString();
}

</script>


<style>

@font-face {
    font-family: 'HarbingerCaps';
    src: url('/fonts/Harbinger_Caps.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
}

    footer {
        text-align: center;
        padding: 20px;
        background-color: transparent;
        color: var(--text-color-dark); /* Color por defecto en modo claro */
    }

    
    /* Modo oscuro, cuando html tiene la clase 'dark' */
    html.dark footer {
        color: var(--text-color-light); /* Color en modo oscuro */
    }

    /* Flexbox para alinear todo en una fila */
    .footer-content {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 40px; /* Espacio entre los elementos */
    }
    

    /* Alineación de logo y texto en la misma línea */
    .logo-container {
        display: flex;
        align-items: center;
        gap: 20px; /* Espacio entre el logo y el texto */
    }

    html.dark .logo-container p{
        color: var(--text-color-light);
    }

    .logo-container p{
        color:  var(--text-color-dark);
        font-family: 'HarbingerCaps', sans-serif;
        font-size: 24px; /* Ajusta el tamaño de la fuente según tus necesidades */

    }

    .text-2xl.text-bold {
        font-family: 'HarbingerCaps', sans-serif;
        font-size: 24px; /* Ajusta según tus necesidades */
        font-weight: 500; /* Semi bold */
    }

    /* Footer Links */
    .footer-links a {
        margin: 0 10px;
        text-decoration: none;
        color: var(--text-color-dark); /* Color de los enlaces en modo claro */
        font-size: 14px;
        font-weight: bold;
    }

    /* Hover en modo claro */
    .footer-links a:hover {
        color: var(--red);
    }

    /* Modo oscuro: enlaces */
    html.dark .footer-links a {
        color: var(--text-color-light); /* Color de los enlaces en modo oscuro */
    }

    html.dark .footer-links a:hover {
        color: var(--red);
    }

    /* Social Links */
    .footer-v2__social-link {
        margin-left: 15px;
        color: var(--text-color-dark); /* Color de los iconos sociales en modo claro */
        text-decoration: none;
        font-size: 24px;
    }

    /* Modo oscuro: iconos sociales */
    html.dark .footer-v2__social-link {
        color: var(--text-color-light); /* Color de los iconos sociales en modo oscuro */
    }

    /* Hover para los iconos sociales en ambos modos */
    .footer-v2__social-link:hover {
        color: var(--red);
    }

    /* Copyright Section */
    .footer-bottom {
        margin-top: 20px;
        font-size: 12px;
        color: var(--text-color-dark); /* Color del texto en modo claro */
    }

    .footer-bottom p {
        margin: 0;
        font-size: 12px; 
        color: var(--text-color-dark); /* Color por defecto en modo claro */
    }

    /* Modo oscuro: cambiar color del párrafo */
    html.dark .footer-bottom p {
        color: var(--text-color-light); /* Color del texto en modo oscuro */
    }

    /* Responsivo */
    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            gap: 20px;
        }
        
        .footer-links {
            margin-top: 10px;
        }
    }

    /* SVG and content alignment */
    svg {
        display: inline-block;
    }

    /* Redes sociales */
    .footer-v2__social-links {
        display: flex;
        align-items: center;
    }
    .footer-v2__social-link:hover i {
    color: var(--red); /* Cambia el color del ícono al pasar el ratón */
}

html.dark .footer-v2__social-link:hover i {
    color: var(--red); /* Asegura que el mismo hover funcione en modo oscuro */
}

</style>
