---
interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<div class="service-box">
  {image && (
    <img src={image} alt={title} class="service-image" loading="lazy"/>
  )}
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
.service-box {
  background-color: #f9f9f9; /* Color de fondo */
  border: 1px solid #e0e0e0; /* Borde */
  border-radius: 8px; /* Esquinas redondeadas */
  padding: 16px; /* Espaciado interno */
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-box:hover {
  transform: translateY(-5px); /* Efecto hover */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra */
}

.service-image {
  width: 100%;
  height: auto; /* Mantiene la proporción */
  object-fit: cover; /* Asegura que la imagen cubra toda la tarjeta sin deformarse */
}

.service-box h3 {
  color: var(--dark-blue); /* Color del título */
  margin-bottom: 0.5rem;
}

.service-box p {
  color: #555; /* Color de la descripción */
}
</style>
