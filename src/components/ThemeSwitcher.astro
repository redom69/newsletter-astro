  </svg>
</label>



<!-- JavaScript para cambiar el tema -->
<script>
  const toggleBtn = document.getElementById('theme-toggle');
  const sunIcon = document.querySelector('.svg-sun');
  const moonIcon = document.querySelector('.svg-moon');

  // Comprobamos el estado inicial (modo claro u oscuro)
  function setInitialTheme() {
    if (document.documentElement.classList.contains('dark')) {
      sunIcon.style.display = 'block'; // Mostrar el sol en modo oscuro
      moonIcon.style.display = 'none'; // Ocultar la luna en modo oscuro
    } else {
      sunIcon.style.display = 'none'; // Ocultar el sol en modo claro
      moonIcon.style.display = 'block'; // Mostrar la luna en modo claro
    }
  }

  // Cambiar entre los temas
  toggleBtn.addEventListener('click', function () {
    document.documentElement.classList.toggle('dark'); // Cambia la clase 'dark'
    if (document.documentElement.classList.contains('dark')) {
      sunIcon.style.display = 'block'; // Mostrar el sol en modo oscuro
      moonIcon.style.display = 'none'; // Ocultar la luna en modo oscuro
    } else {
      sunIcon.style.display = 'none'; // Ocultar el sol en modo claro
      moonIcon.style.display = 'block'; // Mostrar la luna en modo claro
    }
  });

  // Inicializar el estado del tema al cargar la página
  setInitialTheme();
</script>