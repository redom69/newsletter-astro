---
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
import { ViewTransitions } from "astro:transitions"
import  SpeedInsights  from "@vercel/speed-insights/astro"

interface Props {
  title: string
  description: string
}

const { description, title } = Astro.props
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Explora los últimos avances en desarrollo full-stack con tutoriales, noticias tecnológicas y servicios de desarrollo web personalizados. ¡Únete a nuestra newsletter y mantente al día en el mundo tecnológico!" />
    <meta name="keywords" content="full stack, desarrollo web, programación, JavaScript, Node.js, React, Angular, Vue, CSS, HTML, tutoriales full stack, servicios de desarrollo web, front-end, back-end, tecnologías web, newsletters de tecnología, noticias de programación, guías didácticas, tips de programación, desarrollo de aplicaciones web, web apps, backend, frontend, frameworks de JavaScript, desarrollo profesional full stack, APIs, bases de datos, optimización web, SEO para desarrolladores, servicios web" />
    <meta name="author" content="Redom69" />

    <!-- Open Graph para redes sociales -->
    <meta property="og:title" content="Redom69 - Noticias Full Stack y Servicios de Desarrollo Web" />
    <meta property="og:description" content="Descubre lo último en desarrollo web full stack con nuestros tutoriales y noticias. Ofrecemos servicios de desarrollo web personalizados." />
    <meta property="og:image" content="https://redom69.dev/profile.webp" />
    <meta property="og:url" content="https://redom69.dev" />
    <meta property="og:type" content="website" />

    <link rel="canonical" href={Astro.url} />

    
    <!-- Manifest para móviles -->
    <link rel="manifest" href="/site.webmanifest">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <meta name="theme-color" content="#374364" />
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" as="style" onload="this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"></noscript>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://unpkg.com/atropos/css" rel="stylesheet">
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles.css" media="print" onload="this.media='all'" />
    <noscript><link rel="stylesheet" href="/styles.css"></noscript>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.25.0/themes/prism-okaidia.min.css" rel="stylesheet" />
    <ViewTransitions />

    <!-- Google Tag Manager -->
    <script async src="https://www.googletagmanager.com/gtm.js?id=GTM-K7WHQKP6"></script>
    <!-- End Google Tag Manager -->
  </head>
  <body class="relative text-black dark:text-white">
    <div class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-gray-50 dark:bg-gray-950
    bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,#CFD8EE,#ECECEC)]
    dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,#374364,#1D1D1D)]"/>
    
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K7WHQKP6" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <Navbar />
    <slot />
    <Footer />
    <SpeedInsights />
    <style is:global>
      :root {
      --text-color-light: #ECECEC; /* Ajustado para mayor contraste en modo oscuro */
      --text-color-dark: #1D1D1D; /* Color oscuro ajustado para mayor contraste */    

      --red : #E63946;
      --dark-blue: #374364;
      --ligth-blue: #CFD8EE;
    }

    html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
        }
      }

      #header-nav {
        animation: blur linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          backdrop-filter: blur(20px);
          border-width: 1px;
          border-color: rgba(0, 0, 0);
          padding: 0.25rem 0.75rem;
          display: flex;
          flex-direction: row;
          align-items: center;
          background-color: rgb(229, 229, 229);
          border-radius: 9999px;
        }
      }

      @media (prefers-color-scheme: dark) {
        @keyframes blur {
          from {
            border: 0px;
          }
          to {
            box-shadow:
              0px 5px 50px -5px rgba(0, 0, 0, 0.1),
              0px 0px 0 1px rgba(0, 0, 0, 0.3);
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(20px);
            border-width: 1px;
            border-color: rgba(0, 0, 0);
            padding-left: 0.75rem;
            padding-right: 0.75rem;
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
            display: flex;
            flex-direction: row;
            align-items: center;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: 9999px;
          }
        }
      }

      /* Responsividad */
      @media (max-width: 1024px) {
        /* Ajuste de fuentes */
        html {
          font-size: 90%; /* Reducir tamaño de fuente en pantallas medianas */
        }
        body {
          flex-direction: column;
        }

        /* Ajuste de navegación y otros elementos */
        .navbar, .footer {
          padding: 1rem;
          text-align: center;
        }
      }

      @media (max-width: 640px) {
        /* Estilos para móviles */
        html {
          font-size: 85%; /* Reducir tamaño de fuente aún más */
        }

        /* Ajuste de elementos individuales */
        .navbar, .footer {
          padding: 0.5rem;
        }

        /* Ajuste del padding en elementos clave */
        body {
          padding: 0 1rem;
        }

        /* Botones y elementos interactivos más grandes */
        button {
          padding: 0.75rem 1.25rem;
        }

        /* Ajuste de fondo y elementos visuales */
        .absolute {
          background-position: center; /* Centrar el fondo en pantallas pequeñas */
          background-size: cover; /* Asegurar que el fondo cubre toda la pantalla */
        }

        /* Ajustes en la sección principal */
        .content {
          flex-direction: column;
          padding: 0.5rem;
        }

        /* Ajuste de textos e imágenes */
        h1, p {
          text-align: center; /* Centrar el texto */
        }
      }

      /* Tipografía adaptable */
      h1 {
        font-size: 2.5rem;
      }
      p {
        font-size: 1.25rem;
      }

      @media (max-width: 640px) {
        h1 {
          font-size: 1.75rem;
        }
        p {
          font-size: 1rem;
        }
      }

      /* Ajuste de imágenes y fondos */
      img {
        max-width: 100%;
        height: auto;
      }
      .absolute {
        background-position: center;
        background-size: cover;
      }
    </style>
  </body>
</html>
