---
import Layout from '../layouts/Layout.astro';
import About from '../components/About.astro';
import SectionContainer from '../components/SectionContainer.astro';
import TitleSection from '../components/TitleSection.astro';
import Hero from '../components/Hero.astro';
import Posts from '../components/Posts.astro';
import Services from '../components/Services.astro';
import Contact from '../components/Contact.astro';
import Mail from '../components/icons/Mail.astro';
import Person from '../components/icons/Person.astro';
import Work from '../components/icons/Work.astro';
import NewsletterIcon from '../components/icons/NewsletterIcon.astro';

---
<Layout 
  title="Code2Learn"
  description='Explora nuestros servicios de desarrollo web y aprende con los mejores tutoriales full-stack.'
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
        </slot>
      </Hero>
    </SectionContainer>

    <div class="space-y-24">

      <SectionContainer id="newsletter">
        <TitleSection>
          <NewsletterIcon class="size-8" />
          Newsletter
        </TitleSection>
        <Posts/>
      </SectionContainer>
      
      <SectionContainer id="services">
        <TitleSection>
          <Work class="size-8" />
          Servicios
        </TitleSection>
        <Services/>
      </SectionContainer>
      
      <SectionContainer id="about">
        <TitleSection>
          <Person class="size-8" />
          Sobre mí
        </TitleSection>
        <About/>
      </SectionContainer>

      <SectionContainer id="contacto">
        <TitleSection>
          <Mail class="size-8" />
          Contacto
        </TitleSection>
        <Contact />
      </SectionContainer>

    </div>
  </main>

  <style is:global>
    /* Variables de colores */
    :root {
      --text-color-light: #ECECEC;
      --text-color-dark: #1D1D1D;
      --red: #E63946;
      --dark-blue: #374364;
      --light-blue: #CFD8EE;
    }

    /* Ajuste general para tipografía y diseño */
    html {
      font-family: "Onest Variable", system-ui, sans-serif;
      scroll-behavior: smooth;
    }

    body {
      color: rgba(17, 17, 17, 0.9);
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      overscroll-behavior: none;
    }

    @media (prefers-color-scheme: dark) {
      body {
        color: rgba(255, 255, 255, 0.9);
      }
    }

    /* Responsividad: ajustes en secciones */
    @media (max-width: 1024px) {
      html {
        font-size: 90%;
      }
      
      .section-container {
        padding: 2rem 1rem; /* Ajustar el padding de las secciones en pantallas medianas */
      }

      .size-8 {
        width: 4rem; /* Ajustar tamaño de iconos en pantallas medianas */
        height: 4rem;
      }
    }

    @media (max-width: 640px) {
      html {
        font-size: 85%;
      }

      .section-container {
        padding: 1.5rem 0.5rem;
      }

      .size-8 {
        width: 3rem; /* Ajustar tamaño de iconos en pantallas pequeñas */
        height: 3rem;
      }
    }

    /* Ajuste del espacio vertical entre secciones en pantallas pequeñas */
    .space-y-24 {
      gap: 2rem;
    }

    @media (min-width: 640px) {
      .space-y-24 {
        gap: 4rem;
      }
    }

    /* Tipografía adaptativa */
    h1, h2, h3 {
      font-size: 2rem;
    }

    @media (max-width: 640px) {
      h1, h2, h3 {
        font-size: 1.5rem; /* Reducir títulos en pantallas pequeñas */
      }
    }

    /* Ajuste de imágenes */
    img {
      max-width: 100%;
      height: auto;
    }

    /* Botones y elementos interactivos más grandes para pantallas pequeñas */
    button {
      padding: 0.75rem 1.25rem;
      font-size: 1rem;
    }
  </style>
</Layout>
