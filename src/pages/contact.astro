---
title: "Contact"
import Layout from '../layouts/Layout.astro';
---

<section class="contact-section py-8 px-4">
  <h1 class="text-4xl font-bold mb-4">Contact Me</h1>
  <p class="text-lg mb-4">
    If you have any questions or want to collaborate, feel free to reach out!
  </p>
  <form action="/contact" method="POST" class="form-container">
    <input type="text" name="name" placeholder="Your Name" required class="input-field">
    <input type="email" name="email" placeholder="Your Email" required class="input-field">
    <textarea name="message" placeholder="Your Message" required class="input-field"></textarea>
    <button type="submit" class="submit-btn">
      Send Message
    </button>
  </form>
</section>

<style>
  .contact-section {
    background-color: var(--bg-color-light);
    color: var(--text-color-dark);
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    margin: 0 auto;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  html.dark .contact-section {
    background-color: var(--bg-color-dark);
    color: var(--text-color-light);
  }

  .contact-section h1 {
    font-size: 2.5rem;
    color: var(--accent-dark);
    text-align: center;
  }

  html.dark .contact-section h1 {
    color: var(--accent-light);
  }

  .contact-section p {
    text-align: center;
    margin-bottom: 2rem;
  }

  .form-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .input-field {
    padding: 0.75rem;
    border: 1px solid rgba(var(--accent-dark), 0.4);
    border-radius: 8px;
    font-size: 1rem;
    background-color: rgba(var(--accent-light), 0.15);
    color: var(--text-color-dark);
    transition: border-color 0.3s ease, background-color 0.3s ease;
  }

  html.dark .input-field {
    background-color: rgba(var(--accent-dark), 0.2);
    color: var(--text-color-light);
  }

  .input-field:focus {
    border-color: var(--accent);
    outline: none;
    box-shadow: 0 0 0 2px rgba(var(--accent), 0.5);
  }

  .submit-btn {
    padding: 0.75rem 2rem;
    background-color: var(--brand-blue);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  html.dark .submit-btn {
    background-color: var(--accent);
    color: var(--text-color-light);
  }

  .submit-btn:hover {
    background-color: rgba(var(--brand-blue), 0.9);
    transform: translateY(-3px);
  }

  html.dark .submit-btn:hover {
    background-color: rgba(var(--accent-light), 0.9);
  }

  .submit-btn:active {
    transform: translateY(0);
  }

  /* Responsive design for mobile */
  @media (max-width: 768px) {
    .contact-section h1 {
      font-size: 2rem;
    }

    .input-field {
      font-size: 0.9rem;
    }

    .submit-btn {
      font-size: 1rem;
    }
  }
</style>
